#include ".config/nord-xresources/src/nord"

XTerm*Geometry:		100x25
!XTerm*FaceName:		FiraCode Nerd Font:Regular:size=10
XTerm*boldColors:	true
XTerm*boldMode:		false
XTerm*metaSendsEscape:	true
XTerm*loginShell:	true
XTerm*title:		Terminal
XTerm*termName:		xterm-256color
XTerm*utmpInhibit:	False
XTerm*on2Clicks:	word
XTerm*on3Clicks:	line
XTerm*on4Clicks:	page
XTerm*on5Clicks:	all
XTerm*saveLines:	1024
XTerm*bellIsUrgent:	true

! English font
XTerm.vt100.faceName:Bitstream Vera Sans Mono:style=Roman:antialias=True:pixelsize=14
!XTerm.vt100.faceName:Source Code Pro:style=Regular:antialias=True:pixelsize=14
! Chinese font
XTerm.vt100.faceNameDoublesize:Noto Sans Mono CJK SC:style=Regular:antialias=True:pixelsize=14
XTerm.vt100.faceSize: 8

! scrollbar
XTerm.vt100.scrollBar: true
XTerm.vt100.rightScrollBar: true
XTerm.vt100.scrollbar.width: 8
!XTerm.vt100.saveLines: 4096

XTerm.vt100.locale: true
!XTerm.vt100.metaSendsEscape: true

XTerm.vt100.renderFont: True

!XTerm.vt100.bellIsUrgent: true

XTerm.ttyModes: erase ^?
xterm.*backarrowKey: false

Xcursor.theme:		whiteglass
Xcursor.size:		16

Xft.dpi:		96
Xft.antialias:		true
Xft.autohint:		false
Xft.hinting:		true
Xft.hintstyle:	hintslight
Xft.lcdfilter:	lcddefault
Xft.rgba:	rgb

! vim:noet:ft=xdefaults
